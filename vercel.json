{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    },
    { "source": "/posts/:path*", "destination": "/src/posts/:path*" }
  ],
  "buildCommand": "npm run build",
  "installCommand": "npm install --force",
  "framework": "vite",
  "headers": [
    {
      "source": "/posts/:path*",
      "headers": [{ "key": "Access-Control-Allow-Origin", "value": "*" }]
    }
  ]
}
